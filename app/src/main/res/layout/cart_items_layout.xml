<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:padding="8dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relative">

        <ImageView
            android:id="@+id/cartproduct_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="300dp"
            android:src="@drawable/mobiles"/>

        <TextView
            android:id="@+id/cartproduct_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:text="Product Name"
            android:textStyle="bold"
            android:layout_marginLeft="25dp"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/cartproduct_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cartproduct_name"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="4dp"
            android:text="Price"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/cartproduct_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cartproduct_price"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="4dp"
            android:text="Quantity"
            android:textStyle="bold"
            android:textSize="20sp"
            />



    </RelativeLayout>




</androidx.cardview.widget.CardView>